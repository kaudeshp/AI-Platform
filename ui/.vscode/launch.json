  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test Debug",
      "program": "${workspaceRoot}\\node_modules\\jest\\bin\\jest.js",
      "args": [
          "-i"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": [
          "${workspaceRoot}/dist/**/*"
      ],
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug (run webpack first)",
      "url": "http://localhost:9000",
      "webRoot": "${workspaceFolder}/dist"
    },
  ]
}